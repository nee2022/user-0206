.metro_card1_body{
  background: #eee;
  height: 92vh;
}
.metro_card1_body::before{
 content: '';
 display: table;
}
.card_area{
  margin: 0 auto;
  width:730rpx;
  height: 254rpx;
  position: relative;
  margin-bottom: -10rpx;
}
.card_size{
  width:730rpx;
  height: 254rpx;
}
.card_info{
  width: 432rpx;
  height: 147rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  top: 58rpx;
  left: 43rpx;
  font-size: 24rpx;
  color: #fff;
}
.card_info>text:nth-child(1){
  font-size: 30rpx;
}
.card_info>text:nth-child(2){
  color: rgba(255, 255, 255, 0.58);
  margin-top: -20rpx;
}
.card_info>text:nth-child(3){
  color: rgba(255, 255, 255, 0.6);
}
.card_amount{
  width: 124rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  position: absolute;
  top: 61rpx;
  right: 42rpx;
}
.card_amount>text{ 
font-size: 36rpx;
font-weight: bold;
color: #FFFFFF; 
}
.btn{
  width: 113rpx;
  height: 49rpx;
  color: #fff;
font-size: 24rpx;
line-height: 49rpx;
text-align: center;
background: rgba(255, 255, 255, 0.2);
border: 1px solid #FFFFFF;
border-radius: 25rpx;
}
.add_card{
width: 702rpx;
height: 226rpx;
background: #FFFFFF;
border: 1px solid #3A6DD7;
box-shadow: 0px 7px 47px 4px rgba(196, 196, 196, 0.2);
border-radius: 20rpx;
margin:0 auto;
margin-top: 30rpx;
display: flex;
flex-direction: column;
}
.add_card>text:nth-child(1){
font-size: 36rpx;
font-weight: 500;
color: #3A6ED7;
text-align: center;
line-height: 180rpx;
}
.add_card>text:nth-child(2){
  font-size: 24rpx;
  font-weight: 500;
  color: #9C9C9C;
  text-align: center;
  margin-top: -55rpx;
  margin-left: 10rpx;
  }