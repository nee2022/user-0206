.nickname_body{
  width: 100%;
  height: 92vh;
  background: rgba(238, 238, 238, 0.64);
}
.nickname_body::before{
  content: "";
  display: table;
}
.nickname_input{
  width: 702rpx;
  height: 87rpx;
  background: #fff;
border-radius: 20rpx;
margin: 0 auto;
margin-top: 20rpx;
position: relative;
}
input{
  padding-top: 22rpx;
  width: 75%;
  margin-left: 30rpx;
}
button{
  margin-top: 20rpx;
  width: 703rpx !important;
  height: 88rpx !important;
  font-size: 36rpx !important;
  line-height: 60rpx !important;
  color: #fff;
background: linear-gradient(90deg, #4599EE, #3A6CD6);
border-radius: 44rpx !important;
}
.btn{
  color: rgba(0, 0,0, 0.1);
  background: #eee;
}
.disappear {
  display: none;
}
.tips{
  color: rgba(0, 0,0, 0.48);
font-size: 24rpx;
position: absolute;
right: 30rpx;
top: 30rpx;
}
.grag{
  color: rgba(238, 238,238, 0.48);
  font-size: 24rpx;
}