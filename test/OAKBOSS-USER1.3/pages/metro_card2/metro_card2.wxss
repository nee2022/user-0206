.metro_card1_body{
  background: #eee;
  height: 1330rpx;
}
.card_area{
  margin: 0 auto;
  width:730rpx;
  height: 254rpx;
  position: relative;
  margin-bottom: -10rpx;
}
.card_size{
  width:730rpx;
  height: 254rpx;
}
.card_info{
  width: 432rpx;
  height: 147rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  top: 58rpx;
  left: 43rpx;
  font-size: 24rpx;
  color: #fff;
}
.card_info>text:nth-child(1){
  font-size: 30rpx;
}
.card_info>text:nth-child(2){
  color: rgba(255, 255, 255, 0.58);
  margin-top: -20rpx;
}
.card_info>text:nth-child(3){
  color: rgba(255, 255, 255, 0.6);
}
.card_amount{
  width: 124rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  position: absolute;
  top: 61rpx;
  right: 42rpx;
}
.card_amount>text{ 
font-size: 36rpx;
font-weight: bold;
color: #FFFFFF; 
}
.btn{
  width: 113rpx;
  height: 49rpx;
  color: #fff;
font-size: 24rpx;
line-height: 49rpx;
text-align: center;
background: rgba(255, 255, 255, 0.2);
border: 1px solid #FFFFFF;
border-radius: 25rpx;
}
.card_function{
  margin: 14rpx auto;
  width: 702rpx;
  height: 161rpx;
}
.card_function>view{
  width: 702rpx;
  height: 81rpx;
  font-size: 28rpx;
  background: #fff;
  border:0.5rpx solid rgba(238, 238, 238, 0.6);
}
.card_function>view:nth-child(1){
  border-radius: 20rpx 20rpx 0 0;
}
.card_function>view:nth-child(2){
  border-radius: 0 0 20rpx 20rpx;
}
.card_function>view>text{
  line-height: 81rpx;
  margin-left: 32rpx;
}
.back_right1{
  width: 9rpx;
  height: 17rpx;
  margin-left: 517rpx;
}
.back_right2{
  width: 9rpx;
  height: 17rpx;
  margin-left: 542rpx;
}
.btn1{
  width: 703rpx;
  height: 104rpx;
  font-size: 36rpx;
  color: #fff;
  line-height: 104rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 79rpx;
background: linear-gradient(90deg, #4599EE, #3A6CD6);
box-shadow: 0px 0px 16rpx 0px rgba(107, 130, 153, 0.25);
border-radius: 50rpx;
}


