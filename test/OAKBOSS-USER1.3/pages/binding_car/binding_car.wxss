.binding_car_body{
  width: 100vw;
  height: 90.6vh;
  background: #eee;
  padding: 19rpx 25rpx;
  box-sizing: border-box;
}
.binding_car_body::before{
content: '';
display: table;
}
.binding_car_body>view{
  background: #fff;
  width: 700rpx;
  height: 102rpx;
}
.binding_car_body>view:nth-child(1)::before{
  content: '';
  display: table;
}
.binding_car_body>view:nth-child(1){
   border-bottom: 1rpx solid #eee;
   border-radius: 20rpx 20rpx 0 0;
}
.binding_car_body>view:nth-child(2)::before{
  content: '';
  display: table;
}
.binding_car_body>view:nth-child(2){
  border-radius:0 0 20rpx 20rpx;
}
