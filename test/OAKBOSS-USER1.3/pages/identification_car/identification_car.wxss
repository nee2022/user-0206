.identification_car_body{
  width: 100%;
  height: 91vh;
  background: #eee;
}
.identification_car_body::before{
 content: "";
 display: table;
}
.item1{
  font-size: 24rpx;
  margin-top: 19rpx;
}
.item1>view{
  width: 702rpx;
  height: 97rpx;
  border-bottom:1px solid #eee;
  background: #fff;
  margin: 0 auto;
  line-height: 97rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 27rpx;
  box-sizing: border-box;
}
.item1>view>text:nth-child(2){
  color: rgba(0, 0, 0, 0.5);
}
.item1>view:first-child{
   border-radius: 20rpx 20rpx 0 0;
}
.item1>view:last-child{
  border-radius:  0 0 20rpx 20rpx;
}
.input{
  margin-top: 28rpx;
  width: 220rpx;
}
.item2,.item3{
  padding: 35rpx 26rpx 0 26rpx;
  box-sizing: border-box;
  width: 701rpx;
  height: 319rpx;
  background: #fff;
  margin: 0 auto;
  font-size: 24rpx;
background: #FFFFFF;
box-shadow: 0px 7rpx 47rpx 4px rgba(196, 196, 196, 0.2);
border-radius: 20rpx;
margin-top: 19rpx;

}
.driving_license_contrary,.driving_license_front{
  width: 277rpx;
  height: 177rpx;
}
.photo{
  display: flex;
  justify-content: center;
  margin-top: 45rpx;
  position: relative;
}
.picture_front{
  width: 24rpx;
  height: 20rpx;
}
.black_circle{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 65rpx;
}
.item4{
  width: 703rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
background: linear-gradient(90deg, #4599EE, #3A6CD6);
box-shadow: 0px 0px 16rpx 0px rgba(107, 130, 153, 0.25);
border-radius: 48rpx;
margin: 0 auto;
margin-top: 42rpx;
}